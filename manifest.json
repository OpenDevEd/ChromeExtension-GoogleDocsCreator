{
    "name": "GDocs Creator",
    "version": "0.0.3",
    "description": "Bookmarklets for GDocs/Sheets/GDrive folders: One-click downloads and one-click creation of new GDocs/Sheets in specific folders.",
    "permissions": [
	"bookmarks",
	"activeTab"
    ],
    "background": {
	"scripts": ["background.js"],
	"persistent": false
    },
    "browser_action": {
	"default_title": "GDocs Creator",
	"default_icon": "noun_new_1887016.png",
	"default_popup": "popup.html"
    },
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
